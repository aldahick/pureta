{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "rootDirs": ["./src"],
    "outDir": "./lib"
  },
  "compileOnSave": true,
  "buildOnSave": false,
  "exclude": [
    "lib",
    "node_modules",
    "index.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
